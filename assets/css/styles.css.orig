
body {

    background-image: url("../img/background.jpeg");
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
}

#slideshow {
    float: left;
    margin: 0.7%;
    border-radius: 2% 14% 2% 4%;
    box-shadow: 7px 11px 17px 5px rgba(0, 0, 0, 0.8);
    width: 66vw;
    height: 83vh;
    min-height: 83vh;
    margin-top: 1%;
    margin-left: 1%;
    background-image: url("../img/slideshow_img.jpeg");
    background-size: cover;
    background-position: center;
}

html {
    font-size: 10px;
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
    font-family: sans-serif;
    -webkit-text-size-adjust: 100%;
    -ms-text-size-adjust: 100%;
}

.Vertical {
    /*  display:none;*/
    position: absolute;
    background-color: #000000;
    border-radius: 0%;
    border: solid 300% #ffffff;
    z-index: 3;
}

.evo-cp-wrap {
    margin-left: 8px;
    margin-top: 13px;
    display: inline-block;
    padding-bottom: 10px;

}

.evo-pointer {

}

.evo-colorind {
    display: inline-block;
}

.Horizontal {
    /*  display:none;*/
    position: absolute;
    background-color: #000000;
    border-radius: 0%;
    border: solid 300% #ffffff;
    z-index: 3;
}

.Circle { /*  display:none;*/
    position: absolute;
    background-color: #000000;
    border-radius: 100%;
    border: solid 300% #ffffff;
    z-index: 3;
}

.DropDownLego {
    background-color: #29e;
    border-radius: 15%;
    padding: 0.5%;
    margin: 2% 2%;
    width: 75px;
    height: 100px;
    position: relative;
    border-style: solid;
    border-color: #145;
    /* This makes things *much* easier */
    box-sizing: border-box;
    z-index: 2002;
}

.Lego{
    background-color: #29e;
    border-radius: 15%;
    padding: 0.5%;
    margin: 2% 2%;
    width: 7%;
    height: 15%;
    position: absolute;
    border-style: solid;
    border-color: #145;
    background-image: url('');
    background-size: cover;
    background-position: center;
    /* This makes things *much* easier */
    box-sizing: border-box;
    z-index: 5;
}



.chosen_legoes {
    position: absolute;
    float: left;
    -webkit-box-shadow: -1px 1px 5px 9px rgba(0, 0, 0, 0.75);
    -moz-box-shadow: -1px 1px 5px 9px rgba(0, 0, 0, 0.75);
    box-shadow: -1px 1px 5px 9px rgba(0, 0, 0, 0.75);
}

#chosen_area {
    border: solid;
    border-color: #0f0f0f;
    background-color: rgba(0, 0, 0, 0.5);
    opacity: 3;

    position: absolute;
}

.wrap_edit_color {
    width: 90%;
    margin-bottom: 20px;
}

.structure_b {
    width: 60%;
    float: left;
    background: rgba(0, 0, 0, 0.5);
    color: #fff;
    border: 2px solid #0a3c59;
    border-radius: 17% 17% 67% 17%;
    padding: 3%;
    border-style: solid;
    border-color: #2F4F4F;
    text-align: left;
    margin: 2%;
    margin-left: 5%;
}

.structure_b:active {
    text-shadow: #1e4158 0 1px 0;
    border: 2px solid #0a3c59;
    background: #b88112;
    background: -webkit-gradient(linear, left top, left bottom, from(#eb6c17), to(#3e779d));
    background: -webkit-linear-gradient(top, #eb6c17, #b88112);
    background: -moz-linear-gradient(top, #eb6c17, #b88112);
    background: -ms-linear-gradient(top, #eb6c17, #b88112);
    background: -o-linear-gradient(top, #eb6c17, #b88112);
    background-image: -ms-linear-gradient(top, #eb6c17 0%, #b88112 100%);
    color: #fff;
    margin: 2%;
    margin-left: 5%;
    width: 60%;
    padding: 3%;
}

#box1 {
    width: 400px;
    height: 300px;
    border-style: solid;
    border-width: 2px;
}

canvas {
    max-width: 100%;
    max-height: 100%;
}

.colors-wrap {
    width: 80%;
    height: 20%;
    padding: 1%;
    margin: 10%;
    background-color: rgba(0, 0, 0, 0.8);
    opacity: 1;
    border-radius: 8%;
}

#chose_stretch_x, #chose_stretch_y, .structure_button{
    margin-left: 10%;

}

.style_mode{
    max-height: 42%;
    height: 42%;

}
